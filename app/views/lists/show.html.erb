<h1> List: <%= @list.name %> </h1>

<ul class="list-group mb-3">
  <% @list.movies.each do |movie| %>
    <li class="d-flex list-custom mt-1 list-group-item"><b>Title: </b> <%= movie.title %> <b>Overview: </b> <%= movie.overview %> <b>Rating: </b> <%= movie.rating %></li>
  <% end %>
</ul>

<%= link_to new_list_bookmark_path(@list.id), class: "btn btn-primary mt-2" do %>
  <i class="fas fa-plus"> Create new bookmark for <%= @list.name %></i>
<% end %>

<%= link_to lists_path, class: "btn btn-dark mt-2" do %>
  <i class="fas fa-undo-alt"> Back to list</i>
<% end %>
