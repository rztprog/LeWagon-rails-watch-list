<div class="bannerimage d-flex justify-content-center align-items-center text-white">
  <h2> Save which movie you want</h2>
</div>

<div class="container">
  <%= link_to new_list_path, class: "btn btn-primary mt-2" do %>
    <i class="fas fa-plus"> Create a new movie list</i>
  <% end %>

  <div class="d-flex flex-wrap mb-2">
    <% @lists.each do |list| %>
      <div class="mt-2 mr-2"><%= link_to list_path(list) do %>  
        <div class="card bg-dark text-white cardhover">
          <img class="card-img" src="<%= cl_image_path list.photo.key, height: 150, width: 300, crop: :fill %>" alt="Card image">
          <div class="d-flex card-img-overlay justify-content-center align-items-center">
            <h5 class="title"><%= list.name %></h5>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>

</div>
